#include <bits/stdc++.h>
using namespace std;
 void setIO(string s) {
	freopen((s + ".in").c_str(), "r", stdin);
	freopen((s + ".out").c_str(), "w", stdout);
}

int main(){
	// setIO("div7");
	ios::sync_with_stdio(false);
	cin.tie(nullptr);
	int n;
	cin>>n;
	int MOD = 7;
	vector<int>firstSeen(MOD,-1);
	firstSeen[0] = 0;
	long long count = 0;
	int res = 0;
	for(int i = 0; i<n; i++){
		long long temp;
		cin>>temp;
		count += temp;
		count%=MOD;
		if(firstSeen[count]==-1){
			firstSeen[count] = i;
		}else{
			res = max(res,i-firstSeen[count]);
		}
	}
	cout<<res;
	return 0;
}
