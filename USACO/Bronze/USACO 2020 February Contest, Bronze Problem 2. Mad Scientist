#include <bits/stdc++.h>
using namespace std;
 
void setIO(string s) {
	freopen((s + ".in").c_str(), "r", stdin);
	freopen((s + ".out").c_str(), "w", stdout);
}

int main(){
	setIO("breedflip");
	ios::sync_with_stdio(0);
	cin.tie(0);
	int n;
	cin>>n;
	vector<char>curr(n);
	vector<char>desired(n);
	for(int i = 0; i<n; i++) cin>>curr[i];
	for(int i = 0; i<n; i++) cin>>desired[i];
	vector<bool>diff(n+1);
	for(int i = 0; i<n; i++){
		diff[i+1] = curr[i]!=desired[i];
	}
	int res = 0;
	for(int i = 0; i<n; i++){
		if(!diff[i] && diff[i+1]){
			res++;
		}
	}
	cout<<res;
	return 0;
}
