class Solution {
public:
    int countPrimes(int n) {
        if(n==0) return 0;
        vector<bool>sieve(n,true);
        int res = 0;
        sieve[1] = false;
        sieve[0] = false;
        for(int i = 2; i<n; i++){
            if(sieve[i]){
                for(int j = i+i; j<n; j+=i){
                    sieve[j] = false;
                }
            }
        }
        int c = 0;
        for(bool i : sieve){
            if(i) res++;
        }
        return res;
    }
};
