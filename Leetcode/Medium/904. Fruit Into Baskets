class Solution {
public:
    int totalFruit(vector<int>& fruits) {
        map<int,int>m;
        int res = 0;
        int L = 0;
        for(int i = 0; i<fruits.size(); i++){
            m[fruits[i]]++;
            if(m.size()>2){
                m[fruits[L]]--;
                if(m[fruits[L]]==0) m.erase(fruits[L]);
                L++;
            }
            int temp = 0;
            for(auto& it : m){
                temp+= it.second;
            }
            
            res = max(temp,res);
            
        }
        return res;
    }
};
