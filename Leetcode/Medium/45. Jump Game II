class Solution {
public:
    int jump(vector<int>& nums) {
        vector<int>steps(nums.size(),0);
        for(int i = 0; i<nums.size(); i++){
            for(int j = 1; j<=nums[i] && i+j<nums.size(); j++){
                int next = i+j;
                if(steps[next]==0){
                    steps[next] = steps[i]+1;
                }else{
                    steps[next] = min(steps[next],steps[i]+1);
                }
            }
        }
        return steps[nums.size()-1];
    }
};
